@model ICollection<PetGuide.Web.ViewModels.Posts.AllPostsViewModel>

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>All Pets</h2>
                    <p> Here you are able to see all registered pets. </p>
                </div>
            </div>
        </div>
        <section id="portfolio" class="portfolio" style="padding-top: 60px">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-lost">Health</li>
                        <li data-filter=".filter-spotted">Grooming</li>
                        <li data-filter=".filter-found">Food</li>
                        <li data-filter=".filter-lost">Behaviour</li>
                        <li data-filter=".filter-spotted">Toys</li>
                        <li data-filter=".filter-found">Communication</li>
                    </ul>
                </div>
            </div>
        </section>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container">

            <div class="row">

                @foreach (var postModel in Model)
                {

                    <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <article class="entry">

                            <div class="entry-img">
                                <img src="~/img/register-font2.jpg" alt="" class="img-fluid">
                            </div>

                            <h2 class="entry-title">
                                <a href="/Posts/Details/@postModel.Id"> @postModel.Title </a>
                            </h2>

                            <div class="entry-meta">
                                <ul>
                                    <li class="d-flex align-items-center"><i class="icofont-user"></i> @postModel.Author?.UserName </li>
                                    <li class="d-flex align-items-center"><i class="icofont-wall-clock"> @postModel.CreatedOnAsString </i> </li>
                                </ul>
                            </div>

                            <div class="entry-content">
                                <textarea disabled rows="4">@postModel.ShortContent</textarea>

                            </div>

                            <div class="read-more">
                                <a href="/Posts/Details/@postModel.Id">Read More</a>
                            </div>

                        </article><!-- End blog entry -->
                    </div>
                }



            </div>

            <div class="blog-pagination" data-aos="fade-up">
                <ul class="justify-content-center">
                    <li class="disabled"><i class="icofont-rounded-left"></i></li>
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="icofont-rounded-right"></i></a></li>
                </ul>
            </div>

        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->