@model PetGuide.Web.ViewModels.Posts.AllPostsByTagViewModel

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>All Posts with "@Model.Tag" tag</h2>
                    <p> Best section where anybody could get usefull information about his or her pets. </p>
                </div>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container">

            <div class="row">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <article class="entry">

                            <div class="entry-img">
                                <img src="@post.FirstPicture?.Name" alt="" class="img-fluid">
                            </div>

                            <h2 class="entry-title">
                                <a asp-action="Details" asp-route-id="@post.Id"> @post.Title </a>
                            </h2>

                            <div class="entry-meta">
                                <ul>
                                    <li class="d-flex align-items-center"><i class="icofont-user"></i> @post.Author?.UserName </li>
                                    <li class="d-flex align-items-center"><i class="icofont-wall-clock"> @post.CreatedOnAsString </i> </li>
                                </ul>
                            </div>

                            <div class="entry-content">
                                <textarea disabled rows="4">@post.ShortContent</textarea>

                            </div>

                            <div class="read-more">
                                <a asp-action="Details" asp-route-id="@post.Id">Read More</a>
                            </div>

                        </article><!-- End blog entry -->
                    </div>
                }
            </div>
        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->