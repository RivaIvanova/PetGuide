@model PetGuide.Web.ViewModels.Events.EventInputModel

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Add new Event</h2>
                </div>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container">

            <div class="row">

                <div class="col-lg-8 mx-auto pt-3 entries">

                    <article class="entry entry-single">

                        <div class="card-body p-0">

                            <form method="post" enctype="multipart/form-data">

                                <partial name="_AddEditPartial" model="@Model" />

                                <div class="entry-footer clearfix">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 mx-auto">
                                            <div class="form-group mb-0 mt-2 text-center">
                                                <input type="submit" value="Share" class="btn search_btn" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </article><!-- End blog entry -->
                </div><!-- End blog entries list -->
            </div>
        </div>
    </section><!-- End Blog Section -->
</main><!-- End #main -->

@section LoginRegisterAdd {
    <link href="~/css/login-register.css" type="text/css" rel="stylesheet" asp-append-version="true">
}