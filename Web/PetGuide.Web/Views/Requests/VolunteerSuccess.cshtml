@{
    this.Layout = "_CleanLayout";
}

<!-- Volunteer Success Modal -->
<div id="volunteer" class="modal show fade" style="display: block" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-success">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <div class="icon-box">
                    <i class="icofont-check-alt"></i>
                </div>
            </div>
            <div class="modal-body text-center">
                <h4>Great!</h4>
                <p>Your request has been sent successfully. After being approved by our moderators you'll receive an email with further information about your volunteering.</p>
                <a class="btn btn-success" asp-controller="Home" asp-action="Index"><i class="icofont-arrow-right"></i><span>Go to home</span></a>
            </div>
        </div>
    </div>
</div>

<div class="modal-backdrop fade show"></div>

@section Modal {
    <link href="~/css/modal.css" type="text/css" rel="stylesheet" asp-append-version="true" />
}
