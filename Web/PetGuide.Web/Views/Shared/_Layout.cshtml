            <nav class="nav-menu d-none d-lg-block">
                <ul>


                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkk" asp-area="" asp-controller="Pets" asp-action="Search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkk" asp-area="" asp-controller="Pets" asp-action="All">All Pets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkk" asp-area="" asp-controller="Advices" asp-action="Advices">Advices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkk" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkk" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
