@using PetGuide.Data.Models.Enums

@model PetGuide.Web.ViewModels.Pets.EditPetInputModel

<div class="container-register">
    <div class="d-flex justify-content-center h-100">
        <div class="card" style="width: 800px">
            <div class="card-header">
                <h3>Edit @Model.Name</h3>
                <div class="d-flex justify-content-end social_icon">
                    <span><i class="fas fa-paw"></i></span>
                    <span><i class="fas fa-dog"></i></span>
                    <span><i class="fas fa-cat"></i></span>
                </div>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">

                        <div class="col-12 col-md-6">

                            <div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-paw"></i></span>
                                    </div>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">

                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-md-6">
                            <div>
                                <span asp-validation-for="Type" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <span class="input-group-text"><i class="fas fa-question-circle"></i></span>
                                        <select asp-for="Type" style="width:100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<PetType>()">
                                            <option placeholder="" value="">Type</option>
                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>
                                <span asp-validation-for="Color" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <span class="input-group-text"><i class="fas fa-palette"></i></span>
                                        <select asp-for="Color" style="width:100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<PetColor>()">
                                            <option placeholder="" value="">Color</option>
                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>

                                <span asp-validation-for="Age" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                                    </div>
                                    <input asp-for="Age" type="text" class="form-control" placeholder="Age">

                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>
                                <span asp-validation-for="Size" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <span class="input-group-text"><i class="fas fa-weight"></i></span>
                                        <select asp-for="Size" style="width:100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<PetSize>()">
                                            <option placeholder="" value="">Size</option>
                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>

                                <span asp-validation-for="Location.District" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        <select asp-for="Location.District" style="width:100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<District>()">
                                            <option placeholder="" value="">District</option>
                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>

                                <span asp-validation-for="Location.Street" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    </div>
                                    <input asp-for="Location.Street" type="text" class="form-control" placeholder="Street">

                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>

                                <span asp-validation-for="Location.AdditionalLocationInfo" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    </div>
                                    <input asp-for="Location.AdditionalLocationInfo" type="text" class="form-control" placeholder="Additional Location Info">

                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div>
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <span class="input-group-text"><i class="fas fa-question-circle"></i></span>
                                        <select asp-for="Status" style="width: 100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<PetStatus>()">
                                            <option placeholder="" value="">Status</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6"> 
                            <div>

                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-pencil-alt"></i></span>
                                    </div>
                                    <textarea asp-for="Description" rows="4" style="resize:none" type="text" class="form-control" placeholder="Description"></textarea>

                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn float-right login_btn" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section LoginRegisterAdd {
    <link href="~/css/login-register.css" type="text/css" rel="stylesheet" asp-append-version="true">
}