@model PetGuide.Web.ViewModels.Pets.PetsDetailsViewModel
@{
    this.ViewData["Title"] = "Pet Details";
}
<main id="main">

    <!-- Pets Details Heading -->
    <section class="breadcrumbs">

        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Pet Details</h2>
                </div>
            </div>
        </div>

    </section>
    <!-- END Pets Details Heading -->
    <!-- Pets Details -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="portfolio-details-container">
                <div class="row">

                    <div class="col-md-8">

                        @if (this.User.Identity.Name.Equals(this.Model.Contact.UserName))
                        {
                            <div class="d-flex mb-3">

                                <div>
                                    <a asp-controller="Pets" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
                                </div>
                                <div class="ml-1">
                                    <form method="post" id="deleteForm" asp-controller="Pets" asp-action="Delete" asp-route-id="@Model.Id">
                                    </form>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                                </div>

                            </div>
                        }


                        <div id="carouselExampleControls" class="carousel slide" data-interval="6000" data-ride="carousel">
                            <div class="carousel-inner" style="max-height: 450px">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/img/pet-profile/dog-profile.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/shelters/dog-hug.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/shelters/woman-with-cat.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>

                    <div class="col-md-4">
                        <div class="portfolio-info">
                            <h3>Pet information</h3>
                            <ul>
                                <li><strong>Name</strong>: @Model.Name</li>
                                <li><strong>Location</strong>: @Model.Location.District.ToString()</li>
                                <li><strong>Date</strong>: @Model.CreatedOnAsString</li>
                                <li><strong>Person</strong>: @Model.Contact.UserName</li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>

            <div class="portfolio-description">
                <div class="row">

                    <div class="col-md-6">

                        <h2>Personal information</h2>
                        <p>
                            <strong>Name:</strong>
                            @Model.Name
                        </p>

                        <p>
                            <strong>Age:</strong>
                            @Model.Age
                        </p>

                        <h2>Location</h2>
                        <p>
                            <strong>District:</strong>
                            @Model.Location.District.ToString()
                        </p>
                        <p>
                            <strong>Street:</strong>
                            @Model.Location.Street
                        </p>
                        <p>
                            <strong>Additional location info:</strong>
                            @Model.Location.AdditionalLocationInfo
                        </p>

                    </div>

                    <div class="col-md-6">

                        <h2>Description</h2>
                        <p>
                            @Model.Description
                        </p>
                        <p>
                            <strong>Type</strong>
                            @Model.Type.ToString()
                        </p>

                        <h2>Contacts</h2>
                        <p>
                            <strong>Fullname:</strong>
                            @Model.Contact.FirstName @Model.Contact.LastName
                        </p>
                        <p>
                            <strong>Username:</strong>
                            @Model.Contact?.UserName
                        </p>
                        <p>
                            <strong>Email:</strong>
                            @Model.Contact?.Email
                        </p>

                    </div>

                </div>

            </div>

        </div>

    </section>
    <!-- END Pets Details -->
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete @Model.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete "@Model.Name"?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                </div>
            </div>
        </div>
    </div>

</main>
