@using PetGuide.Data.Models

@model PetGuide.Web.ViewModels.Pets.AddPetInputModel

<div class="container-register">
    <div class="d-flex justify-content-center h-100">
        <div class="card" style="width: 800px">
            <div class="card-header">
                <h3>Add Pet</h3>
                <div class="d-flex justify-content-end social_icon">
                    <span><i class="fas fa-paw"></i></span>
                    <span><i class="fas fa-dog"></i></span>
                    <span><i class="fas fa-cat"></i></span>
                </div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">

                        <div class="col-12 col-md-6">

                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-paw"></i></span>
                                </div>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name">

                            </div>
                        </div>

                        <div class="col-12 col-md-6">

                            <span asp-validation-for="Age" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                                </div>
                                <input asp-for="Age" type="text" class="form-control" placeholder="Age">

                            </div>
                        </div>

                        <div class="col-12 col-md-6">

                            <span asp-validation-for="District" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend" style="width:100%">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <select asp-for="District" style="width:100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<District>()">
                                        <option placeholder="" value="">District</option>
                                    </select>

                                </div>
                            </div>
                        </div>


                        <div class="col-12 col-md-6">

                            <span asp-validation-for="Street" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                </div>
                                <input asp-for="Street" type="text" class="form-control" placeholder="Street">

                            </div>
                        </div>

                        <div class="col-12 col-md-6">

                            <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                </div>
                                <input asp-for="AdditionalInfo" type="text" class="form-control" placeholder="Additional Location Info">

                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <span asp-validation-for="Type" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend" style="width:100%">
                                    <span class="input-group-text"><i class="fas fa-question-circle"></i></span>
                                    <select asp-for="Type" style="width: 100%; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" class="form-control" asp-items="Html.GetEnumSelectList<PetType>()">
                                        <option placeholder="" value="">Type</option>
                                    </select>

                                </div>

                            </div>
                        </div>

                        <div class="col-12 col-md-6">

                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-pencil-alt"></i></span>
                                </div>
                                <textarea asp-for="Description" rows="4" style="resize:none" type="text" class="form-control" placeholder="Description"></textarea>

                            </div>

                        </div>


                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn float-right login_btn" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>