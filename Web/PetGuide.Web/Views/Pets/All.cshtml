@model PetGuide.Web.ViewModels.Pets.AllPetsListViewModel

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>All Pets</h2>
                    <p> Here you are able to see all registered pets. </p>
                </div>
            </div>
        </div>
        <section id="portfolio" class="portfolio" style="padding-top: 60px">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-lost">Lost Pets</li>
                        <li data-filter=".filter-spotted">Spotted Pets</li>
                        <li data-filter=".filter-found">Found Pets</li>
                    </ul>
                </div>
            </div>
        </section>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container">

            <div class="row">

                @foreach (var petModel in Model.Pets)
                {

                    <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <article class="entry">

                            <div class="entry-img">
                                <!-- PET PICTURE -->
                                <img src="~/img/register-font2.jpg" alt="" class="img-fluid">
                            </div>

                            <h2 class="entry-title">
                                <a href="/Pets/Details/@petModel.Id"> @petModel.Name </a>
                            </h2>

                            <div class="entry-meta">
                                <ul>
                                    <li class="d-flex align-items-center"><i class="icofont-user"></i> @petModel.Contact.UserName </li>
                                    <li class="d-flex align-items-center"><i class="icofont-wall-clock"> @petModel.CreatedOnAsString </i> </li>
                                </ul>
                            </div>

                            <div class="entry-content">
                                <textarea disabled rows="4">@petModel.ShortDescription</textarea>

                            </div>

                            <div class="read-more">
                                <a asp-action="Details" asp-route-id="@petModel.Id">Read More</a>
                            </div>

                        </article><!-- End blog entry -->
                    </div>
                }



            </div>

            <partial name="_PagingPartial" model="@Model" />

        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->