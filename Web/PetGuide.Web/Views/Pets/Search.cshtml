<main id="main">

   
    <h1 style="text-align:center">Lost Pets</h1>

    <!-- ======= Search Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div>
                <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
            </div>

            <section id="portfolio" class="portfolio" style="padding-top: 60px">
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter=".filter-lost">Lost Pets</li>
                            <li data-filter=".filter-spotted">Spotted Pets</li>
                            <li data-filter=".filter-found">Found Pets</li>
                        </ul>
                    </div>
                </div>
            </section>

            <div class="row mt-5">

                <div class="col-lg-6" data-aos="fade-right">

                    <!-- Search Bar -->
                    <div class="s010">
                        <form>
                            <div class="inner-form">
                                <div class="basic-search">
                                    <div class="input-field">
                                        <input id="search" type="text" placeholder="Type Keywords" />
                                        <div class="icon-wrap">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                                <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <div class="advance-search">
                                    <span class="desc">ADVANCED SEARCH</span>
                                    <div class="row">
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Location</option>
                                                    <option>Mladost</option>
                                                    <option>Studentski grad</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Color</option>
                                                    <option>Black</option>
                                                    <option>Brown</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Size</option>
                                                    <option>Small (5 - 15kg)</option>
                                                    <option>Meddium (15 - 25kg)</option>
                                                    <option>Big (25 - 35kg)</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row second">
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Specification</option>
                                                    <option>Leash</option>
                                                    <option>Outfit</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Time</option>
                                                    <option>Last time</option>
                                                    <option>Today</option>
                                                    <option>This week</option>
                                                    <option>This month</option>
                                                    <option>This year</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="input-field">
                                            <div class="input-select">
                                                <select data-trigger="" name="choices-single-defaul">
                                                    <option placeholder="" value="">Type</option>
                                                    <option>Dog</option>
                                                    <option>Cat</option>
                                                    <option>Bird</option>
                                                    <option>Rabbit</option>
                                                    <option>Other</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row third">
                                        <div class="input-field">
                                            <div class="result-count">
                                                <span>108 </span>results
                                            </div>
                                            <div class="group-btn">
                                                <button class="btn-delete" id="delete">RESET</button>
                                                <button class="btn-search">SEARCH</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- END Search Bar -->

                </div>


                <div class="col-lg-6 mt-5 mt-lg-0" data-aos="fade-left">

                    <div class="s010">
                        <form>
                            <h1 style="text-align:center">Recently Added</h1>
                            <div class="inner-form">
                                <div class="pet-list">

                                    <section id="portfolio" class="portfolio">
                                        <div class="row portfolio-container">

                                            @for (int i = 0; i < 3; i++)
                                            {

                                            <div class="col-lg-6 col-md-6 portfolio-item filter-lost">
                                                <div class="portfolio-wrap">
                                                    <img src="~/assets/img/pet-profile/dog-profile.jpg" class="img-fluid" alt="">
                                                    <div class="portfolio-info">
                                                        <h4>Barky</h4>
                                                        <p>Dog</p>
                                                        <div class="portfolio-links">
                                                            <a href="~/assets/img/pet-profile/dog-profile.jpg" data-gall="portfolioGallery" class="venobox" title="Barky"><i class="bx bx-plus"></i></a>
                                                            <a href="/Pets/Details" title="More Details"><i class="bx bx-link"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }

                                        </div>
                                    </section>

                                </div>

                            </div>
                        </form>
                    </div>



                </div>
            </div>
        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
