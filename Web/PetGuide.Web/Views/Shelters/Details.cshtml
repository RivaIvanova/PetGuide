@using PetGuide.Common
@model PetGuide.Web.ViewModels.Shelters.ShelterDetailsViewModel
@{
    this.ViewData["Title"] = "Shelter Details";
}
<main id="main">

    <!-- Pets Details Heading -->
    <section class="breadcrumbs">

        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Pet Details</h2>
                </div>
            </div>
        </div>

    </section>
    <!-- END Pets Details Heading -->
    <!-- Pets Details -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="portfolio-details-container">
                <div class="row">

                    <div class="col-md-8">

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <div class="d-flex mb-3">

                                <div>
                                    <a asp-controller="Shelters" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
                                </div>
                                <div class="ml-1">
                                    <form method="post" id="deleteForm" asp-controller="Shelters" asp-action="Delete" asp-route-id="@Model.Id">
                                    </form>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                                </div>

                            </div>
                        }


                        <div id="carouselExampleControls" class="carousel slide" data-interval="6000" data-ride="carousel">
                            <div class="carousel-inner" style="max-height: 450px">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/img/shelters/woman-with-dog.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/shelters/dog-hug.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/shelters/woman-with-cat.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>

                    <div class="col-md-4">
                        <div class="portfolio-info">
                            <h3>Shelter information</h3>
                            <ul>
                                <li><strong>Name</strong>: @Model.Name</li>
                                <li><strong>Location</strong>: @Html.DisplayFor(x => x.Location.District)</li>
                                <li><strong>Pets</strong>: @Model.Pets.Count()</li>
                                <li><strong>Volunteers</strong>: @Model.ShelterVolunteers.Count() </li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>

            <div class="portfolio-description">
                <div class="row">

                    <div class="col-md-6">

                        <h2>Personal information</h2>
                        <p>
                            <strong>Name:</strong>
                            @Model.Name
                        </p>

                        <h2>Description</h2>
                        <p>
                            @Model.Description
                        </p>

                        <h2>Location</h2>
                        <p>
                            <strong>District:</strong>
                            @Html.DisplayFor(x => x.Location.District)
                        </p>
                        <p>
                            <strong>Street:</strong>
                            @Model.Location.Street
                        </p>
                        <p>
                            <strong>Additional location info:</strong>
                            @Model.Location.AdditionalLocationInfo
                        </p>

                    </div>

                    <div class="col-md-6">

                        <h2>Activities</h2>
                        <p>
                            @Model.Activities
                        </p>


                        <h2>Volunteers</h2>
                        @foreach (var volunteer in Model.ShelterVolunteers)
                        {
                            <p>
                                <strong>Fullname:</strong>
                                @volunteer.FirstName @volunteer.LastName
                            </p>
                            <p>
                                <strong>Username:</strong>
                                @volunteer.UserName
                            </p>
                            <p>
                                <strong>Email:</strong>
                                @volunteer.Email
                            </p>
                            <hr />
                        }

                    </div>

                </div>

            </div>

        </div>

    </section>

    <section id="contact" class="contact">
        <div class="container">
            <div>
                <div class="mt-3" data-aos="fade-up">
                    <form>
                        <h1 class="text-center">Pets</h1>
                        <div class="inner-form">
                            <section id="portfolio" class="portfolio">
                                <div class="row mt-3 portfolio-container">
                                    @foreach (var pet in Model.Pets)
                                    {
                                        <div class="col-lg-4 col-md-6 portfolio-item filter-lost">
                                            <div class="portfolio-wrap">
                                                <img src="~/img/animal-video.jpg" class="img-fluid" alt="">
                                                <div class="portfolio-info">
                                                    <h4>@pet.Name</h4>
                                                    <p>@Html.DisplayFor(x => pet.Type)</p>
                                                    <div class="portfolio-links">
                                                        <a href="~/img/animal-video.jpg" data-gall="portfolioGallery" class="venobox" title="@pet.Name"><i class="icofont-image"></i></a>
                                                        <a asp-action="Details" asp-route-id="@pet.Id" title="More Details"><i class="bx bx-link"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </section>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- END Pets Details -->
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete @Model.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete "@Model.Name"?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                </div>
            </div>
        </div>
    </div>

</main>
