@using PetGuide.Data.Models.Enums
@model PetGuide.Web.ViewModels.Shelters.ShelterInputModel

<main id="main">
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container">

            <div class="row">

                <div class="col-lg-8 mx-auto pt-3 entries">

                    <article class="entry entry-single">

                        <div class="card-body p-0">

                            <form method="post">

                                <div class="entry-content ml-3">
                                    <h3>Shelter name</h3>
                                </div>

                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <textarea asp-for="Name" rows="1" style="resize:none" type="text" class="form-control" placeholder="Shelter name"></textarea>

                                </div>

                                <div class="entry-content ml-3">
                                    <h3>Location</h3>
                                </div>

                                <span asp-validation-for="Location.District" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend" style="width:100%">
                                        <select asp-for="Location.District" class="form-control" asp-items="Html.GetEnumSelectList<District>() ">
                                            <option placeholder="" value="">District</option>
                                        </select>
                                    </div>
                                </div>

                                <span asp-validation-for="Location.Street" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <textarea asp-for="Location.Street" rows="1" style="resize:none" type="text" class="form-control" placeholder="Street"></textarea>
                                </div>

                                <span asp-validation-for="Location.AdditionalLocationInfo" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <textarea asp-for="Location.AdditionalLocationInfo" rows="1" style="resize:none" type="text" class="form-control" placeholder="Additional Location Information"></textarea>
                                </div>

                                <div class="entry-content ml-3">
                                    <h3>Description</h3>
                                </div>

                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <textarea asp-for="Description" rows="8" style="resize:none" type="text" class="form-control" placeholder="Here you can describe the shelter. e.g. Facilities, Garden, Shelter size, etc."></textarea>

                                </div>

                                <div class="entry-content ml-3">
                                    <h3>Activities</h3>
                                </div>

                                <span asp-validation-for="Activities" class="text-danger"></span>
                                <div class="input-group form-group">
                                    <textarea asp-for="Activities" rows="8" style="resize:none" type="text" class="form-control" placeholder="Please describe the shelter activities e.g. Preparing food, Grooming, Volunteers activities, etc."></textarea>

                                </div>



                                <div class="entry-footer clearfix">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 mx-auto">
                                            <div class="form-group mb-0 mt-2 text-center">
                                                <input type="submit" value="Save" class="btn search_btn" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </article><!-- End blog entry -->
                </div><!-- End blog entries list -->
            </div>
        </div>
    </section><!-- End Blog Section -->
</main><!-- End #main -->